<link href="/vendor/datetimepicker/jquery.datetimepicker.css" rel="stylesheet">
<link href='/vendor/NVD3/nv.d3.css' rel='stylesheet'>

<div class='container' style='padding-top:50px'>
	<h1>Analytics</h1>

	<hr />

	<!-- Date time selector -->
	<div id='timeBar' class="row">
		<div class='col-sm-3 wrapper' style='display:inline-block; vertical-align:bottom;'>
			<div class='input-group'>
				<input id="datetimepicker" type="text" class='form-control'></input>
				<span class='input-group-btn'>
					<button id='datetimeselected' class='btn btn-default' type='button'>Go</button>
				</span>
			</div>
		</div>
	</div>

	<!-- Peak hours -->
	<div class="row">
		<hr/>
		<h3>Team</h3>
		<div class="col-sm-12" id="peakHours">
			<h4>Team: Peak hour analysis</h4>
			<svg style="width: 100%; height: 300px"></svg>
		</div>
	</div>

	<!-- Employee specific -->
	<div class="row">
		<hr/>
		<h3>Individual</h3>
		<div class="col-sm-6" id="helpCount">
			<h4>Customers helped</h4>
			<svg style="width: 100%; height: 300px;"></svg>
		</div>
		<div class="col-sm-6" id="helpTime">
			<h4>Avg customer help time</h4>
			<svg style="width: 100%; height: 300px;"></svg>
		</div>
	</div>
</div>