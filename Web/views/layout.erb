<!DOCTYPE html>
<html>
	<head>
		<title>Burgess Wireless System</title>
		<link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
		<link href="/css/main.css" rel="stylesheet">
		<link href="/vendor/startbootstrap/css/landing-page.css" rel="stylesheet">

		<!-- Custom Fonts -->
		<link href="/vendor/startbootstrap/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
		<link href="http://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">


	</head>
	<body>
		<%= erb :navbar %>
		<!-- <div class="container"> -->
			<div>
				<% if session[:errors] and not session[:errors].empty? then %>
					<div class="alert alert-danger" role="alert">
						<% pop_errors.each do |error| %>
						<p>
							<span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
							<span class="sr-only">Error:</span>
							<%= error %>
						</p>
						<% end %>
					</div>
				<% end %>
			</div>

		<%= yield %>

		<!-- </div> -->

		<%= erb :footer %>
		
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  		<script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
		<%= javascripts %>
	</body>
</html>
